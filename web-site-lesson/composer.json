{
  "require-dev": {
    "phpunit/phpunit": "9.5.10",
    "vimeo/psalm": "^4.13",
    "squizlabs/php_codesniffer": "3.6.1",
    "slevomat/coding-standard": "7.0.16"
  },
  "require": {
    "guzzlehttp/guzzle": "^7.0"
  },
  "scripts": {
    "check-style": "phpcs -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 web-site-lesson tests",
    "fix-style": "phpcbf -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1  web-site-lesson tests"
  }
}
